rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Rules for the 'machines' collection
    match /machines/{machineId} {
      // A user can CREATE a machine if they are logged in and the new
      // document's userId field matches their own user ID.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // A user can READ, UPDATE, or DELETE a machine if they are logged in
      // and the existing document's userId field matches their own user ID.
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Rules for the 'records' collection
    match /records/{recordId} {
      // Same logic applies: separate 'create' from the other operations.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Rules for the 'businesses' collection
    match /businesses/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}